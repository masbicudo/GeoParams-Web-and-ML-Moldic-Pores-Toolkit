    "version": "0.2.0",
    "configurations": [


        {
            "name": "Python Debugger: App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_SECRET_KEY": "chave_secreta_de_dev"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: StreamLit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/sl_stats/sl_app.py"
            ],
            "env": {
                "FLASK_ENV": "development",
                "FLASK_SECRET_KEY": "chave_secreta_de_dev"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}